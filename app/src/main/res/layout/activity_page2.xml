<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c3"
    tools:context=".Page2Activity">

    <RadioGroup
        android:id="@+id/rg1"
        android:paddingLeft="20dp"
        android:layout_width="416dp"
        android:layout_height="301dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/radiobg"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:fontFamily="@font/infostory"
            android:text="Iced Americano"
            android:textColor="#493232"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:backgroundTint="#E3D7D7"
            android:fontFamily="@font/infostory"
            android:text="Iced Mocha"
            android:textColor="#493232"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:fontFamily="@font/infostory"
            android:text="Espresso"
            android:textColor="#493232"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:fontFamily="@font/infostory"
            android:text="Cappuccino"
            android:textColor="#493232"
            android:textSize="30sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        style="@style/header"
        android:layout_marginTop="16dp"
        android:text=" What Type of Coffee You Want?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        style="@style/header"
        android:layout_width="458dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:text="What else you would like in coffee?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg1" />

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="412dp"
        android:layout_height="231dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/radiobg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <CheckBox
            android:paddingLeft="15dp"
            android:id="@+id/cb1"
            android:layout_width="413dp"
            android:layout_height="73dp"
            android:text="Whipped Cream"
            android:textColor="#372A2A"
            android:textSize="30sp"
            android:fontFamily="@font/infostory" />

        <CheckBox
            android:paddingLeft="20dp"
            android:id="@+id/cb2"
            android:layout_width="415dp"
            android:layout_height="70dp"
            android:text="Sugar"
            android:textColor="#372A2A"
            android:textSize="30sp"
            android:fontFamily="@font/infostory" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="128dp"
            android:layout_height="74dp"
            android:backgroundTint="#5C3627"
            android:text="Pay"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>